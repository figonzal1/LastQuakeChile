<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:elevation="0dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_mag_color"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/painted_circle"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:srcCompat="@drawable/background_magnitude_circle_shape" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        card_view:layout_constraintStart_toEndOf="@id/iv_mag_color"
        card_view:layout_constraintTop_toTopOf="@+id/iv_mag_color"
        tools:text="Nombre Ciudad" />

    <TextView
        android:id="@+id/tv_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textAppearance="?attr/textAppearanceCaption"
        card_view:layout_constraintBottom_toBottomOf="@+id/tv_city"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="@+id/tv_city"
        tools:text="XX D X h" />

    <TextView
        android:id="@+id/tv_reference"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="0dp"
        android:textAppearance="?attr/textAppearanceCaption"
        card_view:layout_constraintBottom_toBottomOf="@+id/iv_mag_color"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="@+id/tv_city"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_city"
        tools:text="Referencia de la ciudad" />


    <TextView
        android:id="@+id/tv_magnitude"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:maxLength="4"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="@android:color/white"
        android:textStyle="normal"
        card_view:layout_constraintBottom_toBottomOf="@+id/iv_mag_color"
        card_view:layout_constraintEnd_toEndOf="@+id/iv_mag_color"
        card_view:layout_constraintStart_toStartOf="@+id/iv_mag_color"
        card_view:layout_constraintTop_toTopOf="@+id/iv_mag_color"
        tools:text="9.5" />

    <ImageView
        android:id="@+id/iv_sensitive"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/sensitive_icon"
        android:visibility="invisible"
        card_view:layout_constraintBottom_toBottomOf="@+id/tv_city"
        card_view:layout_constraintEnd_toStartOf="@+id/tv_hour"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toEndOf="@+id/tv_city"
        card_view:layout_constraintTop_toTopOf="@+id/tv_city"
        card_view:srcCompat="@drawable/round_warning_24"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="?attr/dividerHorizontal"
        android:visibility="visible"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="@+id/tv_hour"
        card_view:layout_constraintStart_toStartOf="@+id/tv_reference"
        card_view:layout_constraintTop_toBottomOf="@+id/iv_mag_color" />

</androidx.constraintlayout.widget.ConstraintLayout>