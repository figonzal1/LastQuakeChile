<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:summary="@string/alert_pref_summary"
        app:title="@string/alert_pref_title"
        app:useSimpleSummaryProvider="true">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/FIREBASE_PREF_KEY"
            app:summaryOff="@string/alert_pref_summary_off"
            app:summaryOn="@string/alert_pref_summary_on"
            app:title="@string/alert_pref_title_switch"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:summary="@string/night_mode_pref_summary"
        app:title="@string/night_mode_pref_title"
        app:useSimpleSummaryProvider="true">

        <SwitchPreference
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="@string/NIGHT_MODE_MANUAL_KEY"
            app:summaryOff="@string/night_mode_manual_pref_summary_off"
            app:summaryOn="@string/night_mode_manual_pref_summary_on"
            app:title="@string/night_mode_manual_pref_title_switch"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/NIGHT_MODE_AUTO_KEY"
            app:summaryOff="@string/night_mode_auto_pref_summary_off"
            app:summaryOn="@string/night_mode_auto_pref_summary_on"
            app:title="@string/night_mode_auto_pref_title_switch"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
